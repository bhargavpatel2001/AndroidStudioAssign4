<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BhargavAssign4" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">#A003F4</item>
    </style>

    <style name="Theme.BhargavAssign4.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name ="HomeFragment" >
        <item name="android:background">#FF5722</item>
    </style>

    <style name ="DownloadFragment">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name ="WebSeriveFragment">
        <item name="android:background">#33CD39</item>
    </style>

    <style name ="ObjectFragment1">
        <item name="android:textColor">#0B70C1</item>
        <item name="android:textSize">10pt</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name ="ObjectFragment2">
        <item name="android:textColor">#00BCD4</item>
        <item name="android:textSize">16pt</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name ="ObjectFragment3" >
        <item name="android:textColor">#FFEB3B</item>
        <item name="android:textSize">16pt</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>